{
  "name": "Map Making App Reloaded",
  "version": "1.0.1",
  "manifest_version": 3,
  "description": "A visual and functional overhaul for the Map Making App site, implementing many QOL features to improve the overall user experience",
  "permissions": ["storage", "scripting", "activeTab"],
  "host_permissions": ["https://map-making.app/*"],
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "action": {
    "default_popup": "ui/popup/popup.html",
    "default_title": "Map Layout Controls"
  },
  "background": {
    "service_worker": "background/bg.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://map-making.app/maps/*"],
      "run_at": "document_idle",
      "css": ["styles/root.css", "styles/editor.css"],
      "js": [
        "lib/helpers.js",
        "content/constants.js",
        "content/state.js",
        "content/tags.js",
        "content/shapes.js",
        "content/selections.js",
        "lib/poppers.js",
        "lib/colorpicker.js",
        "lib/presets.js",
        "content/fullscreen.js",
        "content/settings.js",
        "content/overview.js",
        "content/editor.js",
        "content/tutorial.js",
        "content/extras.js",
        "ui/popup/theme.js"
      ]
    },
    {
      "matches": ["https://map-making.app/"],
      "exclude_matches": ["https://map-making.app/maps/*"],
      "run_at": "document_idle",
      "css": ["styles/root.css", "styles/home.css"],
      "js": [
        "lib/helpers.js",
        "lib/delaunator.js",
        "lib/simplex-noise.js",
        "lib/presets.js",
        "lib/colorpicker.js",
        "ui/popup/theme.js",
        "content/terrain.js",
        "content/home.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "inject/hook.js", 
        "styles/editor.css",
        "styles/root.css",
        "lib/delaunator.js",
        "assets/*"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
